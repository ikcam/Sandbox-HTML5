@import 'nib'

/*!
Sandbox shortcodes CSS
*/

.one_half,
.one_third,
.two_third,
.one_fourth,
.three_fourth,
.one_fifth,
.one_sixth
	float left
	margin-right 4%
	min-height 1px
	height 100% !important
	height 1px
	position relative

.one_half
	width 48%

.one_third
	width 30.6666%

.two_third
	width 65.3333%

.one_fourth
	width 22%

.three_fourth
	width 74%

.one_fifth
	width 16.8% 

.one_sixth
	width 13.3333%

.last
	clear right
	margin-right 0 !important

.clearfix
	clearfix()

div.box
	background #FFF
	border-radius 5px
	border 1px solid #DADADA
	margin-bottom 1.5em

	div.box-header
		background linear-gradient(top, #FFF, #F1F1F1)
		border-bottom 1px solid #DADADA
		border-radius top 5px
		font-size 1.2em

	&.with-header
		div.box-header
			padding .5em 30px

		div.box-content
			border-radius bottom 5px
			padding .5em 30px

		&.padding-small
			div.box-header,
			div.box-content
				padding .5em 20px

	&.no-header
		div.box-content
			border-radius 5px
			padding 2em

	&.with-bg
		background #F7F7F7

div#tabs
	margin .5em 0 1.5em

	ul.ui-tabs-nav
		list-style none !important
		margin 0 !important
		padding 0 !important

		&:after
			content '.'
			clear both
			display block
			height 0
			visibility hidden

		> li
			float left

			> a
				background #FFF
				border 1px solid #DADADA
				display block
				margin-right -1px
				padding .5em
				text-decoration none

			&.ui-state-active
				> a
					border-bottom 1px solid #FFF

	div.ui-tabs-hide
		display none

	div.ui-tabs-panel
		background #FFF
		border 1px solid #DADADA
		margin-top -1px
		padding .5em

div#accordion
	border-radius bottom 5px
	border-bottom 1px solid #CCC
	margin .5em 0 1.5em

	.ui-accordion-header
		background #f1f1f1
		background linear-gradient(top, #FFF, #F1F1F1)
		border 1px solid #CCC
		font-size 1em
		font-weight normal
		margin 0
		padding .5em 20px

		&.ui-state-default
			border-bottom none

		&.ui-state-active
			background-color #FFF
			background linear-gradient(top, #F1F1F1, #FFF)

		&:last-child
			border-radius bottom 5px

		&:first-child
			border-radius top 5px

	.ui-accordion-content
		background #FFF
		border-right 1px solid #CCC
		border-left 1px solid #CCC
		padding 20px